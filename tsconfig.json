{
  "compilerOptions": {
    "resolveJsonModule": true,
    "jsx": "preserve",
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": false,
    "moduleResolution": "node",
    "strictBindCallApply": true,
    "declaration": false,
    "esModuleInterop": true,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "sourceMap": true,
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "noEmit": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src", "@types", "node_modules/vite/client.d.ts"]
}
